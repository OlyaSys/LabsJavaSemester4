<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="300.0" prefWidth="300.0" xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.controller.Controller">

    <Label layoutX="100.0" layoutY="40.0" text="Sign in App">
        <font>
            <Font name="Verdana" size="16.0" />
        </font>
    </Label>

    <Label layoutX="40.0" layoutY="80.0" text="Username">
        <font>
            <Font name="Verdana" size="12.0" />
        </font>
    </Label>

    <TextField fx:id="textUsername" layoutX="40.0" layoutY="100.0" prefHeight="30" prefWidth="220"/>

    <Label layoutX="40.0" layoutY="140.0" text="Password">
        <font>
            <Font name="Verdana" size="12.0" />
        </font>
    </Label>

    <TextField fx:id="textPassword" layoutX="40.0" layoutY="160.0" prefHeight="30" prefWidth="220"/>

    <Button fx:id="btnSignIn" layoutX="40.0" layoutY="200.0" mnemonicParsing="false" onAction="#getAccess"
            prefHeight="30" prefWidth="220" text="Sign In"
            style="-fx-background-color: limegreen; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14"/>

</AnchorPane>