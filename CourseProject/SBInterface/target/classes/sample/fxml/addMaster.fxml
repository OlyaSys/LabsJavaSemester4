<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.controller.MasterController"
            prefHeight="200.0" prefWidth="200.0">

    <children>
        <Label layoutX="60.0" layoutY="50.0" text = "Id: ">
            <font>
                <Font name="Verdana" size="14.0" />
            </font>
        </Label>

        <TextField fx:id="newTextId" layoutX="120.0" layoutY="50.0" prefHeight="30" prefWidth="100" promptText="for set"/>

        <Label layoutX="60.0" layoutY="110.0" text = "Name: ">
            <font>
                <Font name="Verdana" size="14.0" />
            </font>
        </Label>

        <TextField fx:id="textName" layoutX="120.0" layoutY="110.0" prefHeight="30" prefWidth="100"/>

        <Button fx:id="btnAdd" layoutX="30.0" layoutY="170.0" mnemonicParsing="false" onAction="#addMaster"
                prefHeight="30" prefWidth="100" text="Add"/>

        <Button fx:id="btnSet" layoutX="160.0" layoutY="170.0" mnemonicParsing="false" onAction="#setMaster"
                prefHeight="30" prefWidth="100" text="Set"/>

    </children>

</AnchorPane>
